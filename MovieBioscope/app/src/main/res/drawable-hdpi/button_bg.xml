<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/violet_color"/>
            <stroke android:color="@color/violet_color" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="1000dp" />
        </shape>
    </item>
    <item android:drawable="@android:color/darker_gray" android:state_pressed="true"/>
    <item android:drawable="@android:color/darker_gray" android:state_focused="true"/>
    <item android:drawable="@color/violet_color"/>

</selector>